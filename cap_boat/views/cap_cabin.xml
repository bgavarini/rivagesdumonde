<odoo>
    <!-- MANAGE 'CABIN' VIEWS -->
    <data noupdate="0">

        <!-- ~~~~~~~~~~ -->
        <!-- TREE VIEWS -->
        <!-- ~~~~~~~~~~ -->

        <!-- DEFAULT TREE VIEW -->
        <record model="ir.ui.view" id="cabin_tree_01">
            <field name="name">cabin_tree_01</field>
            <field name="model">cabin</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="boat_id"/>
                    <field name="pontoon_id"/>
                    <field name="name"/>
                    <field name="x"/>
                    <field name="y"/>
                    <field name="color" options='{"bg_color": "color", "fg_color": "color"}'/>
                </tree>

            </field>
        </record>

        <!-- ~~~~~~~~~~ -->
        <!-- FORM VIEWS -->
        <!-- ~~~~~~~~~~ -->

        <!-- DEFAULT FORM VIEW -->
        <record model="ir.ui.view" id="cabin_form_01">
            <field name="name">cabin_form_01</field>
            <field name="model">cabin</field>
            <field name="arch" type="xml">

                <form>
                    <header/>
                    <sheet>
                        <div name="button_box" class="oe_button_box"/>
                        <div name="title_box" class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group name="boat">
                                <field name="boat_id"/>
                                <field name="pontoon_id_invisible" invisible="1"/>
                                <field name="pontoon_id" attrs="{'invisible': [('pontoon_id_invisible', '=', True)]}"/>
                            </group>
                            <group name="coordinates">
                                <field name="x"/>
                                <field name="y"/>
                            </group>
                            <group name="price">
                                <field name="currency_id"/>
                                <field name="amount"/>
                                <field name="color" widget="color"/>
                            </group>
                            <group name="reservation">
                                <field name="is_reserved"/>
                            </group>
                        </group>
                        <notebook/>
                    </sheet>
                </form>

            </field>
        </record>

    </data>
</odoo>
